<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary">



        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Add User"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp"
    >

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@android:color/black"
        android:padding="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="start|center"
        android:layout_marginStart="3dp"
        android:textSize="16sp"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:background="@drawable/spin_bg">
        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:gravity="start|center"
            android:layout_marginStart="5dp"
android:inputType="textCapSentences"
            android:singleLine="true"></EditText>

    </RelativeLayout>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Location"
        android:textColor="@android:color/black"
        android:padding="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="start|center"
        android:layout_marginStart="3dp"
        android:textSize="16sp"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:background="@drawable/spin_bg">
        <EditText
            android:id="@+id/edt_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginStart="5dp"

            android:gravity="start|center"
            android:singleLine="true"></EditText>

    </RelativeLayout>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Sector"
        android:textColor="@android:color/black"
        android:padding="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="start|center"
        android:layout_marginStart="3dp"
        android:textSize="16sp"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:background="@drawable/spin_bg">
        <EditText
            android:id="@+id/edt_sector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
android:inputType="number"
            android:gravity="start|center"
            android:singleLine="true"></EditText>

    </RelativeLayout>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="No. of Tiffins(Per Day)"
        android:textColor="@android:color/black"
        android:padding="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="start|center"
        android:layout_marginStart="3dp"
        android:textSize="16sp"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:background="@drawable/spin_bg">
        <EditText
            android:id="@+id/edt_tiffins"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:gravity="start|center"
            android:inputType="number"
            android:layout_marginStart="5dp"
android:maxLength="3"
            android:singleLine="true"></EditText>

    </RelativeLayout>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Phone No."
        android:textColor="@android:color/black"
        android:padding="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="start|center"
        android:layout_marginStart="3dp"
        android:textSize="16sp"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:background="@drawable/spin_bg">
        <EditText
            android:id="@+id/edt_phn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:inputType="phone"
            android:layout_marginStart="5dp"
            android:maxLength="10"
            android:gravity="start|center"
            android:singleLine="true"></EditText>

    </RelativeLayout>
<Button
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:id="@+id/btn_add"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:text="Submit"
    android:textAllCaps="false"
    android:textSize="14sp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:textColor="@android:color/white"
    android:background="@drawable/orange_bg"
    android:gravity="center"/>

</LinearLayout>

</ScrollView>
</LinearLayout>